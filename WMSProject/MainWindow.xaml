<Window x:Class="WMSProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WMSProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:EmployeeViewModel/>
    </Window.DataContext>
    <WrapPanel>
        <Border BorderBrush="Black" 
                BorderThickness="1"
                CornerRadius="10"
                Padding="3"
                Margin="4"
                >
            <StackPanel Orientation="Vertical" Margin="10">
                <Label FontWeight="Bold">Név:</Label>
                <TextBlock Text="{Binding Name}" Margin="5 0 0 0"></TextBlock>
                <Label FontWeight="Bold">Adószám</Label>
                <TextBlock Text="{Binding TaxNum}" Margin="5 0 0 0"></TextBlock>
                <Label FontWeight="Bold">Kivett szabadnapok</Label>
                <TextBlock Text="{Binding DaysOff}" Margin="5 0 0 0"></TextBlock>
            </StackPanel>
        </Border>
    </WrapPanel>
</Window>
